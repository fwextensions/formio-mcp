# Form.io Configuration
FORMIO_PROJECT_URL=https://your-project.form.io
FORMIO_API_KEY=your-api-key-here

# Alternatively, use JWT token authentication:
# FORMIO_TOKEN=your-jwt-token-here

# ============================================
# MCP HTTP Server Configuration
# ============================================
# Use these settings when running with --http flag

# Server settings
MCP_HTTP_PORT=3000
MCP_HTTP_HOST=localhost
MCP_BASE_PATH=/mcp/v1

# Authentication
# Generate API keys with: openssl rand -hex 32
# Multiple keys can be comma-separated
MCP_API_KEYS=your-secret-key-here
MCP_REQUIRE_AUTH=true

# CORS Configuration
# Comma-separated origins, supports wildcards (*)
MCP_CORS_ORIGINS=http://localhost:*,https://yourdomain.com

# Rate Limiting
MCP_RATE_LIMIT_WINDOW_MS=60000
MCP_RATE_LIMIT_MAX=100

# SSE Configuration
MCP_SSE_HEARTBEAT_MS=30000
MCP_SSE_TIMEOUT_MS=300000
